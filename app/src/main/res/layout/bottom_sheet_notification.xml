<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingTop="24dp"
    android:paddingBottom="48dp">

    <View
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_height="6dp"
        android:background="@color/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvNotifyImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tvNotifyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/sample_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvNotifyImage" />

    <ImageView
        android:id="@+id/imvClearNotify"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@color/light"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_clear_notify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNotifyContent" />

    <TextView
        style="@style/AppMediumTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/delete_notify"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imvClearNotify"
        app:layout_constraintStart_toEndOf="@+id/imvClearNotify"
        app:layout_constraintTop_toTopOf="@+id/imvClearNotify" />

    <ImageView
        android:id="@+id/imvPreventNotify"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/light"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_prevent_notify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvClearNotify" />

    <TextView
        style="@style/AppMediumTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/prevent_notify"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imvPreventNotify"
        app:layout_constraintStart_toEndOf="@+id/imvPreventNotify"
        app:layout_constraintTop_toTopOf="@+id/imvPreventNotify" />


</androidx.constraintlayout.widget.ConstraintLayout>